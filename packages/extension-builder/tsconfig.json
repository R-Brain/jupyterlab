{
  "compilerOptions": {
    "declaration": true, "skipLibCheck": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./lib",
    "lib": ["ES5", "ES2015.Promise", "DOM"],
    "types": ["node"]
  },
  "include": ["src/*"],
  "exclude": ["**/node_modules/*"]
}
