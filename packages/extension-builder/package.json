{
  "name": "@jupyterlab/extension-builder",
  "version": "0.11.0",
  "description": "Tools for building JupyterLab extensions",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/*.d.ts",
    "lib/*.js",
    "style/*.css"
  ],
  "directories": {
    "lib": "lib/"
  },
  "dependencies": {
    "@types/webpack": "^2.2.12",
